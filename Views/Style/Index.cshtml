@using Webzine.WebApplication.Controllers
@model Webzine.Entity.Style

@{
    ViewData["Title"] = "Style";
}

<h3 class="mt-3 border-bottom pb-4">Titres ayant le style @Model.Libelle</h3>
@if (Model.TitresStyles.Any())
{
    @foreach (var titreStyle in Model.TitresStyles)
    {
        <div class="row mt-3 form-inline">
            <div class="col-lg-1 col-md-12">
                <img src="@titreStyle.Titre.UrlJaquette" class="img-fluid" />
            </div>
            <div class="col-lg-10 col-md-12">
                <a asp-area="" asp-controller="Titre" asp-action="Index" asp-route-id="@titreStyle.Titre.IdTitre">@titreStyle.Titre.Libelle</a>
                <p>Durée : @titreStyle.Titre.Duree</p>
            </div>
        </div>
    }
}
else
{
    <a>pas de résultat</a>
}
