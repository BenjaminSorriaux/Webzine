@model Webzine.WebApplication.ViewModels.ArtisteAdminViewModel
@{
    ViewData["Title"] = "DeleteArtiste";
}


<div class="col-12">
    <div class="card-title border-bottom">
        <h1>Supprimer un Artiste</h1>
    </div>
    Êtes vous sur de vouloir supprimer L'artiste "@Model.Artiste.Nom" ?
    <div class="mt-3">

        <form asp-controller="Artiste" asp-action="DeleteArtisteConfirmation" method="post">
            <div class="form-group">
                <input asp-for="Artiste.IdArtiste" value="@Model.Artiste.IdArtiste" type="hidden" />
                <input asp-for="Artiste.Biographie" value="@Model.Artiste.Biographie" type="hidden" />
                <input asp-for="Artiste.Nom" value="@Model.Artiste.Nom" type="hidden" />
                <input asp-for="Artiste.Titres" value="@Model.Artiste.Titres" type="hidden" />
                <input type="submit" class="btn btn-danger" value="Supprimer" />
            </div>
        </form>

    </div>

    <div class="mt-5">
        <a asp-area="Administration" asp-controller="Artiste" asp-action="Index">
            Retour à l'administration des artistes
        </a>
    </div>
</div>