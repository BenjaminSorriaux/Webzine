@model Webzine.WebApplication.ViewModels.StyleAdminViewModel
@{
    ViewData["Title"] = "DeleteStyle";
}

<div class="col-12">
    <div class="card-title border-bottom">
        <h1>Supprimer un Style</h1>
    </div>
    Êtes vous sur de vouloir supprimer Le Style "@Model.Style.Libelle" ?
    <div class="mt-3">

        <form asp-controller="Style" asp-action="ActionDelete" method="post">
            <input value="@Model.Style.IdStyle" asp-for="Style.IdStyle" type="hidden"/>
            <input type="submit" class="btn btn-danger" value="Supprimer" />
        </form>

    </div>
    <div class="mt-5">
        <a asp-area="Administration" asp-controller="Style" asp-action="Index">
            Retour à l'administration des styles
        </a>
    </div>
</div>